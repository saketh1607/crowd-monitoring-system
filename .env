# Emergency Management System - Environment Configuration

# Application Settings
APP_NAME=Emergency Management System
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://emergency_user:emergency_pass@localhost:5432/emergency_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Kafka Configuration (Optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_EMERGENCY_TOPIC=emergency_events
KAFKA_SENSOR_TOPIC=sensor_data

# ML Model Configuration
MODEL_PATH=data/models
MODEL_UPDATE_INTERVAL=3600
PREDICTION_THRESHOLD=0.7

# Emergency Detection Thresholds
MEDICAL_EMERGENCY_THRESHOLD=0.8
FIRE_DETECTION_THRESHOLD=0.85
SECURITY_THREAT_THRESHOLD=0.75

# Crowd Monitoring
MAX_CROWD_DENSITY=4
CROWD_ALERT_THRESHOLD=0.8

# External APIs
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Twitter API (Optional)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Notification Settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
EMERGENCY_CONTACTS=+1234567890,+0987654321

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=8001

# File Storage
UPLOAD_PATH=data/uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.mp4,.avi

# Camera and Sensor Configuration
CAMERA_URLS=http://camera1.local/stream,http://camera2.local/stream
SENSOR_UPDATE_INTERVAL=5

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL=2
MAX_DASHBOARD_HISTORY=1000

# Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# DATABASE_URL=postgresql://prod_user:secure_password@db.example.com:5432/emergency_prod
# REDIS_URL=redis://redis.example.com:6379/0
# SECRET_KEY=your-production-secret-key-here
